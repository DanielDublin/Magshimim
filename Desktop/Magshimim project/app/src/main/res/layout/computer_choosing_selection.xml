<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <TextView
        android:text='Choose how would you like to procceed:                                                                                Press "Create new computer" in oreder to create your own computer out of parts Press "Browse computers" in order to search for already-built computers.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/browseButton"
        android:layout_alignStart="@+id/browseButton"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="51dp"
        android:id="@+id/textView8"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="?attr/editTextColor"
        android:layout_alignRight="@+id/createButton"
        android:layout_alignEnd="@+id/createButton"
        android:gravity="center" />

    <Button
        android:text="Create new computer"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/createButton"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onPrimarySelection"/>

    <Button
        android:text="Browse computers"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/browseButton"
        android:layout_alignTop="@+id/createButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onPrimarySelection" />

    <Button
        android:text="View profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/profileButton"
        android:onClick="onPrimarySelection"
        android:layout_above="@+id/browseButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/addNewComponentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/createButton"
        android:layout_alignLeft="@+id/createButton"
        android:layout_alignRight="@+id/createButton"
        android:layout_alignStart="@+id/createButton"
        android:layout_below="@+id/createButton"
        android:onClick="onPrimarySelection"
        android:layout_marginTop="31dp"
        android:text="Insert new component to the system" />
</RelativeLayout>