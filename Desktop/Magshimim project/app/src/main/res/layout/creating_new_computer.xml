<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/relativeLayout">


    <Button
        android:text="Save and exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveAndQuitBtn"
        android:onClick="onClickComputerCreation"
        android:layout_alignBaseline="@+id/finishButton"
        android:layout_alignBottom="@+id/finishButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12" />

    <HorizontalScrollView
        android:layout_width="match_parent"

        android:id="@+id/horizontalScrollView"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/saveAndQuitBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/finishButton"
            android:layout_marginBottom="33dp">


        </LinearLayout>


    </HorizontalScrollView>

    <Button
        android:text="finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishButton"
        android:onClick="onClickComputerCreation"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Choose the parts in order to create your computer and press finish or exit when you are done"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/infoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/finishButton"
        android:layout_toStartOf="@+id/finishButton"
        android:onClick="onClickComputerCreation"
        android:text="Show info" />


</RelativeLayout>